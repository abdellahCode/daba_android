<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="2dip" >



    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="url"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_weight="1" >

       <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="3 hours ago"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- <VideoView -->
    <!-- android:id="@+id/video" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="200dip" /> -->
    <!-- <TextView android:id="@+id/videourl" -->
    <!-- android:layout_width="0dip" -->
    <!-- android:layout_height="0dip" -->
    <!-- android:visibility="gone"/> -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="video thumbnail"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/videoplay" />

        <ImageView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#2565C7"
            android:paddingLeft="2dip"
            android:contentDescription="video info"
            android:src="@drawable/ic_launcher_white" />
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="city"
                android:textColor="#CCCCCC"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="country"
                android:textColor="#CCCCCC"
                android:textSize="18dp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/userDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="By: Abdellah" />

        <TextView
            android:id="@+id/report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="report" />
    </LinearLayout>

</LinearLayout>